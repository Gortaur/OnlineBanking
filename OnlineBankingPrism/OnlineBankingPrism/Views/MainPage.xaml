<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             x:Class="OnlineBankingPrism.Views.MainPage"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label   Text="{Binding Title}" />
            <Button  VerticalOptions="Center" Text="Replenishment" Command="{Binding NavigateToReplenishmentPageCommand}" />
            <Button VerticalOptions="Center" Text="Transfer" Command="{Binding NavigateToTransferPageCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>