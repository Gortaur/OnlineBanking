<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="OnlineBankingPrism.Views.ReplenishmentPage">
    <ContentPage.Content>
        <StackLayout Margin="10"  VerticalOptions="CenterAndExpand">
            <Picker SelectedItem="{Binding SelectedCard}" ItemsSource="{Binding UserCards}" x:Name="CardPicker"/>
            <Editor Text="{Binding ReceiverCardNumber}" x:Name="ReceiverCardNumberEditor" />
            <Editor Text="{Binding TransactionSumm}" x:Name="TransactionSummEditor"/>
            <Button Command="{Binding SubmitTransactionCommand}" x:Name="SubmitButton" Text="Submit!"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>